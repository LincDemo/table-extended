{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "dom.iterable",
      "ES2020.String"
    ]
  },
  "include": ["src/*.ts"]
}
